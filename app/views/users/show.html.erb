<h1 align="center"><%= @user.username %>'s</h1>

<% if @user.admin?  %>
  <h5 align="center">Account type: Admin</h5>
<% else %>
  <h5 align="center">Account type: User</h5>
<% end %>

<div class="row">
  <div class align="center", "col-md-4 col-md-offset-4">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s posts</h4>
<div class="center">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>